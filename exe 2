
custo=float(input(f"\n Digite qual foi o custo para comprar o item R$ : "))
taxa_impostos=float(input("\n Digite qual a porcentegem de impostos sobre os itens : "))

def formata_real(somaimposto):
    a = '{:.2f}'.format(somaimposto)
    b=a.replace('.',",")
    return b


def soma_imposto(custo,taxa_impostos) :
    somaimposto= ((taxa_impostos*custo)/100)+custo
    print(f"\n O novo valor do item incluindo os custos é a taxa de imposto é de R$ : {formata_real(somaimposto)}")
    

    
soma_imposto(custo,taxa_impostos)   
 
