
print("\nConversor de formato de horas 24h para 12h.")


horas = int(input("\nDigite a(s) hora(s): "))
minutos = int(input("Digite o(s) minuto(s): "))

A="A.M"
P="P.M"

def conversao(horas):
    horas_conversao=horas - 12
    return horas_conversao

def saida(horas,minutos):
    
    print("\nHor√°rio Convertido: ")
    
    if(minutos < 10):
        minutos = (f"0{minutos}")
    
    if(horas <= 12):
        print(horas,":",minutos, A)
    else:
        print(conversao(horas),":", minutos, P)

saida(horas, minutos)


while True:
   horas = int(input("\nDigite um valor negativo para sair  ou  Digite a(s) hora(s): "))
   if horas < 0:
    break

   minutos = int(input("Digite o(s) minuto(s): "))
   saida(horas,minutos)
